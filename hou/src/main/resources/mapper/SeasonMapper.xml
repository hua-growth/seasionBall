<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.yxh.mapper.SeasonMapper">
    <select id="findAllOrdered" resultType="com.yxh.entity.Season">
        SELECT * FROM season ORDER BY created_at DESC
    </select>

    <select id="findByCode" parameterType="string" resultType="com.yxh.entity.Season">
        SELECT * FROM season WHERE code = #{code}
    </select>
    <select id="findById" resultType="com.yxh.entity.Season">
        SELECT * FROM season WHERE id = #{id}
    </select>
</mapper>